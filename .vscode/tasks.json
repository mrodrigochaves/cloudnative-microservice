{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"isBackground": true,
			"problemMatcher": [
				{
					"owner": "quarkus",
					"fileLocation": [
						"relative",
						"${workspaceFolder}/src/main/resources/templates"
					],
					"pattern": [
						{
							"regexp": "\\[(\\d+)\\]\\s(.*):(\\d+):(\\d+)\\s\\-\\s{(.*)}:\\s(.*)$",
							"file": 2,
							"line": 3,
							"column": 4,
							"message": 6
						}
					],
					"background": {
						"activeOnStart": true,
						"beginsPattern": "^.*Task: ",
						"endsPattern": "(^.*Quarkus .* started in .*\\.)|(^.* ERROR .* Failed to start)"
					}
				}
			],
			"group": "build",
			"label": "quarkusDev (modelblockchain)",
			"command": "./gradlew quarkusDev --console=plain",
			"windows": {
				"command": ".\\gradlew.bat quarkusDev --console=plain"
			},
			"options": {
